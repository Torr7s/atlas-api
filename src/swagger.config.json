{
  "openapi": "3.0.0",
  "info": {
    "description": "Simple API for user management",
    "version": "1.0.0",
    "title": "Atlas API"
  },
  "tags": {
    "name": "Users",
    "description": "User management"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "John Doe"
                  },
                  "email": {
                    "type": "string",
                    "exmaple": "johndoe@gmail.com"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "User created sucessfully",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid",
                      "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
                    },
                    "name": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "email": {
                      "type": "string",
                      "example": "johndoe@gmail.com"
                    },
                    "admin": {
                      "type": "boolean",
                      "default": false
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2022-02-29T09:12:33.001Z"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2022-02-29T09:14:33.001Z"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User already exists",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string",
                      "default": "User already exists!"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List all users",
        "description": "Restricted to admin users",
        "parameters": {
          "name": "user_id",
          "in": "path",
          "description": "required user admin id to authentication",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        "responses": {
          "200": {
            "description": "Listing users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserResponse"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string",
                      "default": "User does not exists!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Search for a specific user",
        "parameters": {
          "name": "user_id",
          "in": "path",
          "description": "desired user id",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        "responses": {
          "200": {
            "description": "User found",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid",
                      "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
                    },
                    "name": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "email": {
                      "type": "string",
                      "example": "johndoe@gmail.com"
                    },
                    "admin": {
                      "type": "boolean",
                      "default": false
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2022-02-29T09:12:33.001Z"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2022-02-29T09:14:33.001Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string",
                      "default": "User does not exists!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Sets a user as admin",
        "parameters": {
          "name": "user_id",
          "in": "path",
          "description": "desired user id",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        "responses": {
          "200": {
            "description": "User updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid",
                      "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
                    },
                    "name": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "email": {
                      "type": "string",
                      "example": "johndoe@gmail.com"
                    },
                    "admin": {
                      "type": "boolean",
                      "default": true
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2022-02-29T09:12:33.001Z"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2022-02-29T09:14:33.001Z"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User does not exists",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string",
                      "default": "User does not exists!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "example": "d290f1ee-6c54-4b01-90e6-d701748f0851"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "johndoe@gmail.com"
          },
          "admin": {
            "type": "boolean",
            "default": false
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2022-02-29T09:12:33.001Z"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "example": "2022-02-29T09:14:33.001Z"
          }
        }
      }
    }
  }
}